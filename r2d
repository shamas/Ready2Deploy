#!/bin/bash
source r2d.config

if [ ! -d $out ]
then
    mkdir $out
fi

function replace {
    for f in `cat $inputfile`
    do
        if [ -f $f ]
        then
            livef=$out`basename $f`
            sed "\_$1_s_$1_$2_" < $livef > $out"tmp"
            mv $out"tmp" $livef
        fi
    done
}

echo "Copying to "$out
for f in `cat $inputfile`
do
    bf=`basename $f`
    if [ -f $f ]
    then
    cp $f $out$bf
    else
        if [ ! -e $f ]
        then
            echo "Missing: "$f
        fi
    fi
done

echo Transforming...
for f in `cat $inputfile`
do
    bf=`basename $f`
    if [ -f $out$bf ]
    then
        replace $f $bf
    fi
done

echo "FINISHED"

source $tforms
