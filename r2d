#!/bin/bash
source r2d.config

function replace {
    for f in `cat $inputfile`
    do
#echo `echo $1 | sed -e 's_/_\\/_g'`
echo $1" "$2
        if [ -e $f ]
        then
            livef=$out`basename $f`
            sed "\_$1_s_$1_$2_" < $livef > $out"tmp"
            mv $out"tmp" $livef
        fi
    done
}

for f in `cat $inputfile`
do
    bf=`basename $f`
    echo $f": "$bf
    if [ -e $f ]
    then
    cp $f $out$bf
    else
    echo NE
    fi
done

echo MATCHES:
for f in `cat $inputfile`
do
    bf=`basename $f`
    if [ -e $out$bf ]
    then
        replace $f $out$bf
    fi
done

echo "FINISHED"

source $tforms
